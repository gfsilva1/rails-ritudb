<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Adicionar ritmo para <%= @estado.nome %> </h3>
        <%= simple_form_for [@estado, @ponte] do |f| %>
          <%= f.input :comment, placeholder: 'Descrever o ritmo' %>
          <%= f.association :ritmo, prompt: 'Selecione um ritmo', input_html: { class: 'select2' } %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
